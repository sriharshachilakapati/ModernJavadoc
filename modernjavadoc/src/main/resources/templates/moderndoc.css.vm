.container {
    width: 80%;
    margin-left: auto;
    margin-right: auto;
}

table {
    width: 100%;
    border: 0;
    border-spacing: 0;
}

td, th {
    padding: 10px;
    text-align: left;
}

tr:nth-of-type(even) {
    background-color: #fdfdfd;
}

tr:nth-of-type(odd) {
    background-color: #f3f3f3;
}

.col-first {
    width: 25%;
}